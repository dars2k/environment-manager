# Disable package-lock for faster installs (optional - remove if you need exact versions)
# package-lock=false

# Disable progress bar
progress=false

# Increase network concurrency
maxsockets=50

# Disable audit on install
audit=false

# Use legacy peer deps (if you have peer dependency issues)
legacy-peer-deps=true

# Cache settings
cache-min=3600
prefer-offline=true
